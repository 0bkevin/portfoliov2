---
import { contactData } from "./form/contactData";
import ContactSocials from "./ContactSocials.astro";
import ContactForm from "./form/ContactForm.svelte";
import "./contact.css";
---

<section class="min-h-screen w-full space-y-8 flex flex-col md:py-20 px-4" id="contact">
  <div class="space-y-2">
    <h2 class="text-4xl font-bold text-center">Get in touch</h2>
    <p class="text-gray-500 font-medium text-center">
      Let's talk and build the future
    </p>
  </div>
  <div class="grid md:grid-cols-2 w-full items-center max-w-4xl mx-auto gap-4">
    <div class="space-y-3 md:max-w-xs">
      <h3 class="font-semibold text-center">Talk to me</h3>
      <div class="space-y-2 md:space-y-4">
        {
          contactData.map((info) => {
            return <ContactSocials {...info} />;
          })
        }
      </div>
    </div>
    <div class="w-full mt-16">
      <h3 class="font-semibold text-center">Contact me</h3>
      <div class="mt-6">
        <ContactForm client:only="svelte" />
      </div>
    </div>
  </div>
</section>
