---
interface Props {
  title: string;
  skills: {
    name: string;
    level: string;
  }[];
}
const { title, skills } = Astro.props;
---

<div class="max-w-sm min-w-[24rem] mx-auto bg-white rounded-3xl p-8 shadow-sm border">
  <h4 class="text-xl font-semibold mb-10 text-center">{title}</h4>
  <div class="grid grid-cols-2 gap-6">
    {
      skills.map(({ name, level }) => (
        <div class="flex items-center gap-3">
          <div class="w-6 h-6">
            <i class="bx bx-badge-check text-green-700 text-xl" />
          </div>
          <div>
            <div class="font-medium">{name}</div>
            <div class="text-gray-500 text-sm">{level}</div>
          </div>
        </div>
      ))
    }
  </div>
</div>
